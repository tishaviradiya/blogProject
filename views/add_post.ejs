<%- include('header') %>


            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            
                           
                            <div class="col-lg-6">
                                <% if(locals.flash.success.length >0 && locals.flash.success){ %>
                                    <div class="alert alert-success"><%= locals.flash.success %></div>
                                <% } %>
                                <div class="card">
                                    <div class="card-header">
                                        <strong>Add Post</strong> 
                                    </div>
                                    <div class="card-body card-block">
                                        <form action="/admin/posts/insertPostData" method="post" enctype="multipart/form-data" class="form-horizontal">
                                           
                                            <% var category = ['News',"Politics","Sports","Ethical","Entertainment"] %>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="select" class=" form-control-label">Select Category</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="category" id="select" class="form-control">
                                                        <option value="0">--select Category--</option>
                                                        <% category.map((v,i)=>{ %>
                                                            <option value="<%= v %>"><%= v %></option>
                                                        <% }) %>
                                                        
                                                    </select>
                                                </div>
                                            </div>


                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">Enter title </label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="text" id="text-input" name="title" placeholder="enter Post Title" class="form-control">
                                                    
                                                </div>
                                            </div>

                                          
                                            
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="textarea-input" class=" form-control-label">Description</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <textarea name="description" id="textarea-input" rows="4" placeholder="description ..." class="form-control"></textarea>
                                                </div>
                                            </div>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="file-input" class=" form-control-label">upload Image</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="file" id="file-input" name="postimage" class="form-control-file">
                                                </div>
                                            </div>

                                        
                                    </div>
                                    <div class="card-footer">
                                        <button type="submit" name="submit" class="btn btn-primary btn-sm">
                                            <i class="fa fa-dot-circle-o"></i> Add Post
                                        </button>
                                        <a  href="http://localhost:8001/admin/posts/add_post" class="btn btn-danger btn-sm">
                                            <i class="fa fa-ban"></i> Reset
                                        </a>
                                    </div>
                                </div>
                            </form>
                              
                            </div>
                            
                            
                           
                           
                        </div>
                       

<%- include('footer') %>
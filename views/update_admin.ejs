<%- include('header') %>


            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            
                           <% var fullName = singleRecord.name.split(" ") %>
                            <div class="col-lg-6">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>Edit Admin</strong> 
                                    </div>
                                    <div class="card-body card-block">
                                        <form action="/admin/EditAdminData/<%= singleRecord.id %>" method="post" enctype="multipart/form-data" class="form-horizontal">
                                           
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">Enter first name</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="text" id="text-input" value="<%= fullName[0] %>" name="fname" placeholder="enter first name" class="form-control">
                                                    
                                                </div>
                                            </div>

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="text-input" class=" form-control-label">Enter Last name</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="text" id="text-input" value="<%= fullName[1] %>" name="lname" placeholder="enter last name" class="form-control">
                                                    
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="email-input" class=" form-control-label">Enter Email </label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="email" id="email-input" value="<%= singleRecord.email %>" name="email" placeholder="Enter Email" class="form-control">
                                                    
                                                </div>
                                            </div>
                                           

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label class=" form-control-label">select gender</label>
                                                </div>
                                                <div class="col col-md-9">
                                                    <div class="form-check-inline form-check">
                                                        <label for="inline-radio1" class="form-check-label ">
                                                            <input type="radio" id="inline-radio1" name="gender" value="male" class="form-check-input" <% if(singleRecord.gender=='male'){ %>  <%= 'checked' %> <% } %>>Male
                                                        </label>
                                                        <label for="inline-radio2" class="form-check-label ">
                                                            <input type="radio" id="inline-radio2" name="gender" value="female" class="form-check-input" <% if(singleRecord.gender=='female'){ %>  <%= 'checked' %> <% } %>>Female
                                                        </label>
                                                        
                                                    </div>
                                                </div>
                                            </div>
                                           


                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label class=" form-control-label">select Hobby</label>
                                                </div>
                                                <div class="col col-md-9">
                                                    <div class="form-check-inline form-check">
                                                        <label for="inline-checkbox1" class="form-check-label ">
                                                            <input type="checkbox" id="inline-checkbox1" name="hobby" value="Reading" class="form-check-input" <% if(singleRecord.hobby.includes('Reading')){ %>  <%= 'checked' %> <% } %>>Reading
                                                        </label>
                                                        <label for="inline-checkbox2" class="form-check-label ">
                                                            <input type="checkbox" id="inline-checkbox2" name="hobby" value="Cycling" class="form-check-input" <% if(singleRecord.hobby.includes('Cycling')){ %>  <%= 'checked' %> <% } %>>Cycling
                                                        </label>
                                                        <label for="inline-checkbox3" class="form-check-label ">
                                                            <input type="checkbox" id="inline-checkbox3" name="hobby" value="Adventure" class="form-check-input" <% if(singleRecord.hobby.includes('Adventure')){ %>  <%= 'checked' %> <% } %>>Adventure
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>



                                            <% var city = ['Surat',"Rajkot","Vadodara","Navasari"] %>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="select" class=" form-control-label">Select City</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <select name="city" id="select" class="form-control">
                                                        <option value="0">--select city--</option>
                                                        <% city.map((v,i)=>{ %>
                                                            <option value="<%= v %>" <% if(singleRecord.city==v){ %> <%= 'selected' %> <% } %>><%= v %></option>
                                                        <% }) %>
                                                        
                                                    </select>
                                                </div>
                                            </div>
                                            
                                           
                                           
                                            

                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="textarea-input" class=" form-control-label">Textarea</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <textarea name="message" id="textarea-input" rows="4" placeholder="Messages..." class="form-control"><%= singleRecord.message %></textarea>
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col col-md-3">
                                                    <label for="file-input" class=" form-control-label">upload Image</label>
                                                </div>
                                                <div class="col-12 col-md-9">
                                                    <input type="file" id="file-input" name="image" class="form-control-file">
                                                    <img src="<%= singleRecord.image %>" height="50" />
                                                </div>
                                            </div>

                                        
                                    </div>
                                    <div class="card-footer">
                                        <button type="submit" name="submit" class="btn btn-primary btn-sm">
                                            <i class="fa fa-dot-circle-o"></i> Edit
                                        </button>
                                        <button type="reset" class="btn btn-danger btn-sm">
                                            <i class="fa fa-ban"></i> Reset
                                        </button>
                                    </div>
                                </div>
                            </form>
                              
                            </div>
                            
                            
                           
                           
                        </div>
                       

<%- include('footer') %>
<%- include('header') %>


            <!-- END HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <% if(locals.flash.success.length >0 && locals.flash.success){ %>
                                    <div class="alert alert-success"><%= locals.flash.success %></div>
                                <% } %>

                                <% if(locals.flash.error.length >0 && locals.flash.error){ %>
                                    <div class="alert alert-danger"><%= locals.flash.error %></div>
                                <% } %>
                                <div class="table-responsive table--no-card m-b-30">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>NO</th>
                                                <th>Title</th>
                                                <th >description</th>
                                                <th >Image</th>
                                             
                                                <th>Status</th>
                                                <th >Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% var no=0; for(var ad of sliderData) { %>
                                            <tr>
                                                <td><%= ++no %></td>
                                                <td><%= ad.title %></td>
                                                <td><%= ad.description %></td>
                                               
                                                <td><img src="<%= ad.sliderimage %>" height="100" /></td>
                                                <td>
                                                    <% if(ad.status){ %>
                                                    <a href="/admin/slider/deactive/<%= ad.id %>" class="btn btn-success">Active</a>
                                                    <% } else { %>
                                                        <a href="/admin/slider/active/<%= ad.id %>" class="btn btn-danger">Deactive</a>

                                                    <% } %>
                                                </td>

                                                <td>
                                                    <a href="/admin/deleteAdminRecord/<%= ad.id %>"><i class="fa fa-trash"></i></a> ||
                                                    <a href="/admin/updateAdminRecord/?adminId=<%= ad.id %>"><i class="fa fa-edit"></i></a>
                                                </td>
                                               
                                            </tr>
                                            <% } %>
                                           
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            
                        </div>
                      
                      
                      
                       
<%- include('footer') %>

